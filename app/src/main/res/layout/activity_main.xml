<?xml version="1.0" encoding="utf-8"?>
<LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/layout_bottom_margin">
        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bear"
        android:src="@drawable/bear"
        android:layout_marginRight="@dimen/layout_right_margin"
        android:background="@drawable/bg"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cat"
            android:src="@drawable/cat"
            android:layout_marginRight="@dimen/layout_right_margin"
            android:background="@drawable/bg"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chiken"
            android:src="@drawable/chiken"
            android:layout_marginRight="@dimen/layout_right_margin"
            android:background="@drawable/bg"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cow"
            android:src="@drawable/cow"
            android:background="@drawable/bg"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/layout_bottom_margin">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dog"
            android:src="@drawable/dog"
            android:layout_marginRight="@dimen/layout_right_margin"
            android:background="@drawable/bg"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/elephant"
            android:src="@drawable/elephant"
            android:layout_marginRight="@dimen/layout_right_margin"
            android:background="@drawable/bg"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/snake"
            android:src="@drawable/snake"
            android:layout_marginRight="@dimen/layout_right_margin"
            android:background="@drawable/bg"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/giraffe"
            android:src="@drawable/giraffe"
            android:background="@drawable/bg"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/layout_bottom_margin">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hippo"
            android:src="@drawable/hippo"
            android:layout_marginRight="@dimen/layout_right_margin"
            android:background="@drawable/bg"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/monkey"
            android:src="@drawable/monkey"
            android:layout_marginRight="@dimen/layout_right_margin"
            android:background="@drawable/bg"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/panda"
            android:src="@drawable/panda"
            android:layout_marginRight="@dimen/layout_right_margin"
            android:background="@drawable/bg"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/parrot"
            android:src="@drawable/parrot"
            android:background="@drawable/bg"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/layout_bottom_margin">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/penguin"
            android:src="@drawable/penguin"
            android:layout_marginRight="@dimen/layout_right_margin"
            android:background="@drawable/bg"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pig"
            android:src="@drawable/pig"
            android:layout_marginRight="@dimen/layout_right_margin"
            android:background="@drawable/bg"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rabbit"
            android:src="@drawable/rabbit"
            android:layout_marginRight="@dimen/layout_right_margin"
            android:background="@drawable/bg"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sheep"
            android:src="@drawable/sheep"
            android:background="@drawable/bg"/>
    </LinearLayout>

</LinearLayout>